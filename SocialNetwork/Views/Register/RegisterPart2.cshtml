@model SocialNetwork.ViewModels.Account.RegisterViewModel

@{
    ViewData["Title"] = "Register";
}

<div class="main-container">
<h2>Регистрация нового пользователя</h2>
    <form id="checkMe" method="post" asp-controller="Register" asp-action="RegisterPart2">
    <div asp-validation-summary="ModelOnly"></div>

    <div class="form-group">
        <label asp-for="FirstName"></label>
        <div class="input-wrapper">
            <input style="background-color: aliceblue" asp-for="FirstName" readonly>
            <span class="field-validation-valid"></span>
        </div>
    </div>

    <div class="form-group">
        <label asp-for="LastName"></label>
                <div class="input-wrapper">
        <input style="background-color: aliceblue" asp-for="LastName" readonly>
        <span class="field-validation-valid"></span>
        </div>
    </div>

    <div class="form-group">
        <label asp-for="Login"></label>
        <div class="input-wrapper">
            <input asp-for="Login">
            <span asp-validation-for="Login"></span>
        </div>
    </div>

    <div class="form-group">
        <label asp-for="EmailReg"></label>
        <div class="input-wrapper">
            <input asp-for="EmailReg">
            <span asp-validation-for="EmailReg"></span>
        </div>
    </div>

    <div class="form-group">
        <label asp-for="Date"></label>
        <div class="input-wrapper">
            <input style="background-color: aliceblue" asp-for="Date" readonly>
                <span class="field-validation-valid"></span>
        </div>
    </div>


    <div class="form-group">
        <label asp-for="Month"></label>
        <div class="input-wrapper">
            <input style="background-color: aliceblue" asp-for="Month" readonly>
            <span class="field-validation-valid"></span>
        </div>
    </div>



    <div class="form-group">
        <label asp-for="Year"></label>
        <div class="input-wrapper">
            <input style="background-color: aliceblue" asp-for="Year" readonly>
                <span class="field-validation-valid"></span>
        </div>
    </div>


    <div class="form-group">
        <label asp-for="PasswordReg"></label>
            <div class="input-wrapper">
        <input asp-for="PasswordReg">
        <span asp-validation-for="PasswordReg"></span>
    </div>
    </div>

    <div class="form-group">
        <label asp-for="PasswordConfirm"></label>
                <div class="input-wrapper">
            <input asp-for="PasswordConfirm">
            <span asp-validation-for="PasswordConfirm"></span>
        </div>
    </div>

    <div>
            <button type="submit">Завершить регистрацию</button>

    </div>
</form>
</div>
<!-- Подключение скриптов для конкретных контроллеров -->
@{
    var controllerName = ViewContext.RouteData.Values["controller"]?.ToString();
    var actionName = ViewContext.RouteData.Values["action"]?.ToString();
}
@{
    <script src="~/js/setFooterWidth.js" defer asp-append-version="true"></script> // Обработчик для подгонки ширины футора на мобильных устройствах.

    if (controllerName is "Home" or "Register")
    {
        <script src="~/lib/jquery/dist/jquery.min.js" defer asp-append-version="true"></script>
        <script src="~/lib/jquery-validation/dist/jquery.validate.min.js" defer asp-append-version="true"></script>
        <script src="~/lib/jquery-validation-unobtrusive/dist/jquery.validate.unobtrusive.min.js" defer asp-append-version="true"></script>
        <script src="~/js/formChecker.js" defer asp-append-version="true"></script>
    }

    if (controllerName is "AccountManager")
    {
        if (actionName is "UpdateUserData" or "UpdateProfile")
        {
            <script src="~/lib/jquery/dist/jquery.min.js" defer asp-append-version="true"></script>
            <script src="~/lib/jquery-validation/dist/jquery.validate.min.js" defer asp-append-version="true"></script>
            <script src="~/lib/jquery-validation-unobtrusive/dist/jquery.validate.unobtrusive.min.js" defer asp-append-version="true"></script>
            // <script src="~/js/formChecker.js" defer asp-append-version="true"></script>
            <script src="~/js/monthChoiser.js" defer asp-append-version="true"></script>
        }
        else
        {
            <script src="~/js/messagesLoader.js" defer asp-append-version="true"></script> // Обработчик для загрузки сообщений и комментариев ленту
            <script src="~/js/addMessage.js" defer asp-append-version="true"></script> // Обработчик сообщений
            <script src="~/js/addComment.js" defer asp-append-version="true"></script> // Обработчик комментариев
            <script src="~/js/textareaAutosize.js" defer asp-append-version="true"></script> // Обработчик автоматической подгонки высоты textarea
            <script src="~/js/showConfirmModal.js" asp-append-version="true"></script> // Обработчик модального окна "Да/Отмена"
            <script src="~/js/postDelete.js" defer asp-append-version="true"></script> // Обработчик удаления сообщения или комментария
        }


    }



    if (controllerName is "User")
    {
        <script src="~/js/messagesLoader.js" defer asp-append-version="true"></script>
        <script src="~/js/addComment.js" defer asp-append-version="true"></script>
        <script src="~/js/textareaAutosize.js" defer asp-append-version="true"></script>
        <script src="~/js/showConfirmModal.js"></script>
        <script src="~/js/postDelete.js" defer asp-append-version="true"></script>
        
    }

}
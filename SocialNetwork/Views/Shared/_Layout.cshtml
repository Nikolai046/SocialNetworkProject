<!DOCTYPE html>
<html lang="ru">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - SocialNetwork</title>
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
</head>
<body >
<div class="svg-container">
    <img class="svg-bg" src="/images/background.svg" alt="Background">
</div>
<header>
    <nav class="navbar">
        <a asp-controller="Home" asp-action="Index"> <div class="toolbar_logo"><img src="/images/logo.png" alt="Logo"><p>SocialNetwork</p></div></a>
        <div class="search-wrapper">
            <label class="label-input">
                <input type="text" class="input" autocomplete="off" name="st.query" placeholder="Поиск" maxlength="255" data-error="false" value="" wfd-id="id1">
                <button type="submit" class="button-clean">
                    <img src="/images/search_ico.svg"/>
                </button>
            </label>
        </div>
    </nav>
</header>

<div class="container">
    <main role="main">
        @RenderBody()
    </main>
</div>

<footer>
    <div class="footer-container">
        &copy; 2025 - SocialNetwork 
    </div>
</footer>
</body>
</html>

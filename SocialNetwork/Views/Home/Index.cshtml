@using Microsoft.AspNetCore.Mvc.TagHelpers
@using SocialNetwork.Models.ViewModels.Account
@model LoginViewModel

@{
    ViewData["Title"] = "Главная";
}

<div class="main-container">
    <form class="login-form" id="editForm" method="post" asp-controller="Home" asp-action="login">
        <h2>Вход</h2>

        <div class="form-group">
            <label asp-for="Email"></label>
            <div class="input-wrapper">
                <input asp-for="Email">
                <span asp-validation-for="Email"></span>
            </div>
        </div>
        <div class="form-group">
            <label asp-for="Password"></label>
            <div class="input-wrapper">
                <input asp-for="Password">
                <span asp-validation-for="Password"></span>
            </div>
        </div>
        <div class="remember-me">
            <input type="checkbox" id="remember-me" asp-for="RememberMe">
            <label asp-for="RememberMe">Запомнить меня</label>
        </div>
        <div asp-validation-summary="ModelOnly" class="text-danger"></div>
        <button type="submit">Войти</button>
        <p>Нет аккаунта? <a asp-area="" asp-controller="Register" asp-action="Register">Зарегистрироваться</a></p>

    </form>
</div>